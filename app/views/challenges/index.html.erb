<% @challenges.each do |challenge| %>
	<%= User.find(challenge.author_id).pseudo %><br />
	<%= challenge.description %><br />
<%= button_to "Accept", defi_delete_path, params: {challId: challenge.id}, :id => "open-contacts-dialog-btn", :class => "inbox-sf-add-btn tip", :method => :delete %>
<%= button_to "Deny", defi_delete_path, params: {challId: challenge.id}, :id => "open-contacts-dialog-btn",
      :class => "inbox-sf-add-btn tip", :method => :delete %>
<% end %>
