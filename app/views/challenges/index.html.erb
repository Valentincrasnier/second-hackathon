<% @challenges.each do |challenge| %>
	<%= User.find(challenge.author_id).pseudo %><br />
	<%= challenge.description %><br />
	<%= button_to "Accept", defi_delete_path(challenge.id, verife: "accept"), :class => "btn btn-success", :method => :delete %>
	<%= button_to "Deny", defi_delete_path(challenge.id, verife: "deny"), 
      :class => "btn btn-danger", :method => :delete %>
<% end %>
