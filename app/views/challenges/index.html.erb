<div class="index">
  <div class="container">
    <% @challenges.each do |challenge| %>
      <div class="row">
        <h2>Défie proposé par :</h2>
        <div class="col-xs-5 col-xs-offset-1">
        	<%= User.find(challenge.author_id).pseudo %><br />
          <%= User.find(challenge.author_id).get_age %> ans<br />
        </div>
        <div class="col-xs-5">
          <%= User.find(challenge.author_id).sex %><br />
            score : <%= @user.scrore or 0 %><br /><br />
        </div>
      </div>
      <h3>Ton défi est :</h3>
      <%= challenge.description %><br />
      <div class="chut row">
        <div class="col-xs-5 col-xs-offset-1">
        	<%= button_to "Accepter", defi_delete_path(challenge.id, verife: "accept"), :class => "btn btn-success", :method => :delete %>
        </div>
        <div class="col-xs-5">
        	<%= button_to "Refuser", defi_delete_path(challenge.id, verife: "deny"), 
              :class => "btn btn-danger", :method => :delete %>
        </div>
      </div>
    <% end %>
  </div>
</div>